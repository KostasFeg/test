{
  "name": "Retro Pop",
  "description": "Vibrant 80s arcade colours and playful animations.",
  "config": {
    "theme": {
      "colors": {
        "primary": "#e11d48",
        "secondary": "#f97316",
        "accent": "#a855f7",
        "success": "#10b981",
        "warning": "#facc15",
        "error": "#f43f5e",
        "info": "#0ea5e9"
      }
    },
    "layout": {
      "sidebarWidth": { "buttons": "90px", "labels": "280px", "mobile": "76px" },
      "topBarHeight": "70px",
      "bottomBarHeight": "76px"
    },
    "ui": { "defaultSidebarVariant": "buttons", "defaultShowBottomBar": true },
    "features": { "enableOfflineMode": true, "enableAdvancedFilters": true },
    "reports": {
      "arcade-revenue": { "name": "Arcade Revenue", "filters": ["fromDate","toDate"], "options": {"withTime": true} },
      "token-usage": { "name": "Token Usage", "filters": ["fromDate","toDate"], "options": {"type": ["Coins","Tickets"]} },
      "player-leaderboard": { "name": "Player Leaderboard", "filters": ["scope"], "options": {"scope": ["Top 10","Top 100"]} }
    }
  }
} 