      },
      {
        "slug": "custom-reports",
        "label": "üìä Custom Reports",
        "display": "buttons",
        "columns": 2,
        "children": [
          {
            "slug": "monthly-sales",
            "label": "Monthly Sales Report"
          },
          {
            "slug": "customer-analytics",
            "label": "Customer Analytics"
          },
          {
            "slug": "inventory-status",
