{
  "name": "High Contrast A11y",
  "description": "WCAG-friendly palette for accessibility demos.",
  "config": {
    "theme": {
      "colors": {
        "primary": "#000000",
        "secondary": "#ffffff",
        "accent": "#ff8c00",
        "success": "#007a00",
        "warning": "#cc5500",
        "error": "#cc0000",
        "info": "#005fcc",
        "grey50": "#ffffff",
        "grey100": "#f0f0f0",
        "grey200": "#d0d0d0",
        "grey700": "#2b2b2b",
        "grey900": "#000000"
      }
    },
    "ui": { "defaultSidebarVariant": "labels", "defaultShowBottomBar": false },
    "layout": { "topBarHeight": "64px", "sidebarWidth": { "buttons": "80px", "labels": "240px", "mobile": "72px" } },
    "reports": {
      "contrast-check": { "name": "Contrast Check", "filters": ["level"], "options": {"level": ["AA","AAA"]} },
      "screenreader-stats": { "name": "Screenreader Stats", "filters": ["fromDate","toDate"], "options": {"withTime": false} }
    }
  }
} 