{
  "name": "Forest Serenity",
  "description": "Calming green palette with earthy neutrals; labels sidebar and visible bottom bar.",
  "config": {
    "theme": {
      "colors": {
        "primary": "#15803d",
        "secondary": "#166534",
        "accent": "#65a30d",
        "success": "#22c55e",
        "warning": "#d97706",
        "error": "#b91c1c",
        "info": "#0284c7"
      }
    },
    "layout": {
      "sidebarWidth": { "buttons": "80px", "labels": "260px", "mobile": "70px" },
      "topBarHeight": "60px",
      "bottomBarHeight": "70px"
    },
    "ui": { "defaultSidebarVariant": "labels", "defaultShowBottomBar": true },
    "reports": {
      "eco-sales": { "name": "Eco-Sales", "filters": ["fromDate","toDate"], "options": {"type": ["Organic","Conventional"]} },
      "carbon-footprint": { "name": "Carbon Footprint", "filters": ["scope","fromDate","toDate"], "options": {"scope": ["Local","Regional","National"]} }
    }
  }
} 